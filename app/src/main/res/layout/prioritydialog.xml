<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="28dp"
        android:text="Song Name:"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/songname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="96dp"
        android:layout_toEndOf="@+id/textView"
        android:text="Bakar Bakar"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="32dp"
        android:text="Priority:"
        android:textColor="#fff" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/radioButton2" />
    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/song_genre"
        android:layout_alignTop="@+id/textView3"

        android:text="Low"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton"
        android:layout_below="@+id/radioButton"
        android:text="Medium"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton2"
        android:layout_below="@+id/radioButton2"
        android:textColor="#fff"

        android:text="High" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:textColor="#fff"
        android:layout_below="@+id/radioButton3"
        android:layout_marginTop="15dp"
        android:text="No of times played:" />

    <TextView
        android:id="@+id/song_timesplayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/radioButton3"
        android:textColor="#fff" />

    <Button
        android:id="@+id/but_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:textColor="#fff"
        android:text="Reset"
        android:background="@drawable/buttonbgg2"/>

    <Button
        android:id="@+id/but_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/but_reset"
        android:layout_alignBottom="@+id/but_reset"
        android:layout_alignEnd="@+id/radioButton3"
        android:background="@drawable/buttonbgg2"
        android:text="Confirm"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/song_genre"
        android:layout_alignBottom="@+id/song_genre"
        android:layout_alignStart="@+id/textView"
        android:text="Genre Name:"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/song_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/songname_tv"
        android:layout_below="@+id/songname_tv"
        android:layout_marginTop="21dp"
        android:textColor="#fff" />




</RelativeLayout>